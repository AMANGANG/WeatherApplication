<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp">
    <!--        TODO always use snake casing-->
    <!--        TODO proper naming of ids-->
    <!--TODO use dimens file for all the margins and padding-->



    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieAnimationView2"
        android:layout_width="@dimen/animation_width"
        android:layout_height="@dimen/animation_height"
         app:lottie_autoPlay="true"
        app:lottie_loop="true"
        android:src="@drawable/sunny"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/textViewDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marign_top_inbwt"
        android:text="@string/today_text"
        android:textSize="@dimen/splash_text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/lottieAnimationView2"
        app:layout_constraintTop_toBottomOf="@id/textViewTemperature" />

        <TextView
            android:id="@+id/textViewTemperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/temperature"
            android:textSize="@dimen/splash_text_size"
            app:layout_constraintBottom_toTopOf="@id/textViewDate"
            app:layout_constraintEnd_toEndOf="@id/textViewDate"
            app:layout_constraintStart_toStartOf="@id/textViewDate"
            app:layout_constraintTop_toBottomOf="@id/textViewWeatherDescription"
            tools:layout_editor_absoluteY="66dp" />

        <TextView
        android:id="@+id/textViewWeatherDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marign_top_inbwt"
        android:layout_marginBottom="@dimen/marign_bottom"
        android:text="@string/weather_text"
        android:textSize="@dimen/splash_text_size"
        app:layout_constraintBottom_toTopOf="@id/textViewTemperature"
        app:layout_constraintEnd_toEndOf="@id/textViewTemperature"
        app:layout_constraintStart_toStartOf="@id/textViewTemperature"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
